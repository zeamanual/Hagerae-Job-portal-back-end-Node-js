    <main>
       
        <div class="main">
            
            <!-- Sign up form -->
            <section class="signup">
                <div class="container">
                    <div class="signup-content m-4 row align-items-center border rounded shadow-lg">
                        <div class="signup-form p-5 col-7">
                            <h2 class="form-title">Job Post</h2>
                            <form action = '/job/create' method="post" class="row g-3">
                                <div class="col-md-12 my-2">
                                    <label for="inputEmail4" class="form-label">Position Title</label>
                                    <input required type="text" name='title' class="form-control" id="inputEmail4">
                                  </div>
                                  <div class="col-md-4">
                                    <label for="inputZip" class="form-label">Number of Vacanccy</label>
                                    <input required type="number" name = 'vacanccy' min="1" class="form-control" id="inputZip">
                                  </div>
                                <div class="col-8">
                                  <label for="inputAddress" class="form-label">Job Location</label>
                                  <input required type="text" name='location' class="form-control" id="inputAddress" placeholder="eg. Ethiopia, Addis Ababa">
                                </div>
                                <div class="col-md-6 my-4">
                                    <label for="inputState" class="form-label">Required Educational Level</label>
                                    <select required name = 'requiredEducationalLevel' id="inputState" class="form-select">
                                      <option >None</option>
                                      <option>Primary</option>
                                      <option>Secondary</option>
                                      <option >preparatory</option>
                                      <option>Deploma</option>
                                      <option>Bsc.</option>
                                      <option>Msc.</option>
                                      <option>Phd</option>
                                      <option>Doctrate</option>
                                      <option>Professor</option>
                                    </select>
                                  </div>
                                  <div class="col-md-6 my-4">
                                    <label for="inputState" class="form-label">Required Field of Study</label>
                                    <select required name ='requiredFieldOfStudy' id="inputState" class="form-select">
                                        <option >None</option>
                                        <option >Engineering</option>
                                        <option>Healthe and Related</option>
                                        <option>Computer Science</option>
                                        <option>Information Technology</option>
                                        <option>Accounting</option>
                                        <option>Management</option>
                                    </select>
                                  </div>
                                  <div class="col-md-6 my-3">
                                    <label for="inputState" class="form-label">Experience Level</label>
                                    <select required name='experienceLevel' id="inputState" class="form-select">
                                      <option selected>0 Years</option>
                                      <option>1-2 Years</option>
                                      <option>3-4 Years</option>
                                      <option>+5 Years</option>
                                    </select>
                                  </div>
                                  <div class="col-md-6 my-3">
                                    <label for="inputState" class="form-label">Job Type</label>
                                    <select required name='type' id="inputState" class="form-select">
                                      <option selected>Full Time</option>
                                      <option>Part Time</option>
                                    
                                    </select>
                                  </div>
                                  
                                  <div class="col-8">
                                    <label for="inputAddress" class="form-label">Job Salary</label>
                                    <input required type="number" name='salary' class="form-control" id="inputAddress" placeholder="">
                                  </div>

                                    <div class="col-12">
                                                <fieldset>
                                            <label for="noise">
                                               <h4>
                                                Job Description
                                               </h4>
                                            </label>
                                            <textarea required id="noise" name="description"  class="widgEditor nothing">Job Description here....</textarea>
                                        </fieldset>
                                        <fieldset class="submit">
                                        </fieldset>
                                    </div>
                                
                                  
                             
                              
                                <div class="col-12">
                                  <button type="submit" class="btn btn-primary">Post Job</button>
                                </div>
                              </form>
                            
